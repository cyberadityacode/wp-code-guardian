{
  "name": "wp-code-guardian",
  "displayName": "WP Code Guardian",
  "description": "Zero-config PHPCS & ESLint setup, install, and auto-fix solution for WordPress developers.",
  "publisher": "cyberadityacode",
  "author": {
    "name": "Aditya Dubey",
    "email": "adityadubey793@gmail.com",
    "url": "https://github.com/cyberadityacode"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cyberadityacode/wp-code-guardian.git"
  },
  "icon": "icon.png",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Linters",
    "Formatters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:php",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
  "commands": [
    {
      "command": "wp-code-guardian.fixAll",
      "title": "WP Guardian: Fix Current File"
    }
  ],
  "menus": {
    "editor/context": [
      {
        "command": "wp-code-guardian.fixAll",
        "group": "modification"
      }
    ]
  }
},
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
